<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/allinone"
    android:orientation="vertical"
    tools:context="com.example.chaitanya.mychat.Admin_info">


    <ImageView
        android:id="@+id/pic_prof"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="100dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/admin" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_above="@+id/tv2"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:text="Name :Chaitanya Lotankar"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:gravity="center"
        android:layout_above="@+id/tv3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:textStyle="bold"
        android:text="Email: chaitanya@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_above="@+id/tv4"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_marginBottom="19dp"
        android:text="Contact No.: +7977161629"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="110dp"
        android:text="Contact No.: +7977161629"
        android:textStyle="bold"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </LinearLayout>


</LinearLayout>
